{
  "name": "esm-loader-import-relative-add-extension",
  "version": "1.0.2",
  "description": "Chainable ESModule Loader to add missing file extensions to relative imports",
  "homepage": "",
  "license": "MIT",
  "main": "./dist/index.js",
  "type": "module",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "Brev Patterson",
    "url": "https://github.com/brev"
  },
  "bugs": {
    "url": "https://github.com/brev/esm-loader-import-relative-add-extension#readme"
  },
  "dependencies": {
    "create-esm-loader": "^0.1.1"
  },
  "devDependencies": {
    "@types/node": "^17.0.17",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "c8": "^7.11.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "node-esm-loader": "^0.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4",
    "uvu": "^0.5.3"
  },
  "files": [
    "dist/*"
  ],
  "keywords": [
    "esm",
    "esmodule",
    "loader",
    "chainable",
    "import",
    "relative",
    "missing",
    "extension"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/brev/esm-loader-import-relative-add-extension.git"
  },
  "scripts": {
    "bin:eslint": "eslint --ignore-path .gitignore .",
    "bin:prettier": "prettier --ignore-path .gitignore .",
    "bin:uvu": "NODE_OPTIONS=\"--experimental-loader node-esm-loader\" uvu test .test.js",
    "build": "tsc",
    "build:watch": "run-s 'build -- --watch'",
    "clean": "rimraf coverage/ dist/",
    "format": "run-s 'bin:prettier -- --write'",
    "lint": "run-s 'bin:prettier -- --check' bin:eslint",
    "test": "run-s build bin:uvu",
    "test:cover": "c8 run-s test"
  }
}
